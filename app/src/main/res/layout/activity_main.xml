    <ImageButton


        android:id="@+id/back_button"
        android:contentDescription="next_button"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/left"
        android:text="Back" />


        <ImageButton
            android:id="@+id/next_button"
            android:contentDescription="next_button"

            android:layout_width="match_parent"
